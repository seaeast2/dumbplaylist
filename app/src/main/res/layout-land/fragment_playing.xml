<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.seaeast22.playlisttube.viewmodel.PlaylistsViewModel" />
        <variable
            name="fabCallback"
            type="com.seaeast22.playlisttube.ui.PlayingFragment.FabCallback" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/videolist_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.PlayingFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                android:id="@+id/youtube_player_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:autoPlay="false"
                app:showYouTubeButton="false"
                app:showFullScreenButton="true" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/videolist_rcview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/list_item_savedlist" />
        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{() -> fabCallback.add(viewModel.selectedPlaylist)}"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"

            app:srcCompat="@drawable/ic_add_24px" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
